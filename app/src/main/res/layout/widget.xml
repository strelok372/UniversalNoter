<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ListView
        android:id="@+id/lv_widget"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/tl_tr_bl_whitecorner"
        android:padding="8dp"
        tools:listitem="@layout/widget_item">

    </ListView>

    <TextView
        android:id="@+id/tv_widget_empty_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/tl_tr_bl_whitecorner"
        android:gravity="center"
        android:text="There are no records yet."
        android:textColor="@color/deepBlue"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="8dp"
        android:background="@drawable/bl_br_corner"
        android:orientation="horizontal"
        android:padding="4dp">

        <ImageView
            android:id="@+id/b_change_widget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_change_widget" />

        <ImageView
            android:id="@+id/b_add_to_widget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_add_widget" />

    </LinearLayout>


</FrameLayout>